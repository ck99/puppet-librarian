<% case @gitlab_dbtype -%>
<% when 'mysql' -%>
production:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: <%= @gitlab_dbname %>
  pool: 10
  username: <%= @gitlab_dbuser %>
  password: <%= @gitlab_dbpwd %>
  host: <%= @gitlab_dbhost %>
  # host: localhost
  # socket: /tmp/mysql.sock
<% when 'pgsql' -%>
production:
  adapter: postgresql
  encoding: unicode
  database: <%= @gitlab_dbname %>
  pool: 10
  username: <%= @gitlab_dbuser %>
  password: <%= @gitlab_dbpwd %>
  host: <%= @gitlab_dbhost %>
  port: <%= @gitlab_dbport %>
  # host: localhost
  # port: 5432
  # socket: /tmp/postgresql.sock
<% end -%>
